<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_grey"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <!--TODO: not have this field at all if not required-->

            <!--<EditText-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:editable="false"-->
                <!--android:hint="Trigger Id"-->
                <!--android:id="@+id/newTriggerId"-->
                <!--android:windowSoftInputMode="adjustResize|stateHidden"-->
                <!--/>-->

            <!--<android.widget.Space-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="10dp" />-->

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Trigger Data"
                android:id="@+id/newTriggerData"
                android:windowSoftInputMode="adjustResize|stateHidden"/>

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Spinner
                android:id="@+id/newActionType"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:entries="@array/action_type_constants"/>

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <!--TODO: not have this field at all if not required-->

            <!--<EditText-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="Action Data"-->
                <!--android:editable="false"-->
                <!--android:id="@+id/newActionData"-->
                <!--android:windowSoftInputMode="adjustResize|stateHidden"/>-->

            <!--<android.widget.Space-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="10dp" />-->

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:onClick="insertIntoTask"
        android:src="@drawable/done"
        android:clickable="true"
        android:layout_margin="10dp"/>

</android.support.design.widget.CoordinatorLayout>






